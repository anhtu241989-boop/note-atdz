<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Note ATDZ</title>

  <!-- CodeMirror CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/theme/dracula.min.css">

  <style>
    body {
      margin: 0;
      font-family: monospace;
      transition: background 0.3s, color 0.3s;
    }
    header {
      padding: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: background 0.3s, color 0.3s;
    }
    header h1 {
      margin: 0;
      font-size: 18px;
      font-weight: 300;
      letter-spacing: 0.3px;
    }
    header small {
      font-size: 12px;
      font-weight: 300;
    }
    .toggle-mode {
      cursor: pointer;
      font-size: 14px;
      padding: 4px 10px;
      border-radius: 6px;
      transition: background 0.3s, color 0.3s, border 0.3s;
    }
    #editor {
      height: calc(100vh - 55px);
    }
    .CodeMirror {
      height: 100% !important;
      font-size: 14px;
      line-height: 1.5;
    }

    /* DARK THEME (default) */
    body.dark {
      background-color: #1e1e1e;
      color: #ddd;
    }
    body.dark header {
      background: #111;
      border-bottom: 1px solid #333;
    }
    body.dark header h1 { color: #eee; }
    body.dark header small { color: #aaa; }
    body.dark .toggle-mode {
      background: #222;
      border: 1px solid #444;
      color: #ddd;
    }

    /* LIGHT THEME */
    body.light {
      background-color: #f5f5f5;
      color: #222;
    }
    body.light header {
      background: #fff;
      border-bottom: 1px solid #ccc;
    }
    body.light header h1 { color: #111; }
    body.light header small { color: #555; }
    body.light .toggle-mode {
      background: #eee;
      border: 1px solid #ccc;
      color: #222;
    }
  </style>
</head>
<body class="dark">
  <!-- HEADER -->
  <header>
    <div>
      <h1>Note Service</h1>
      <small>Changes are automatically saved after 1s</small>
    </div>
    <div class="toggle-mode" onclick="toggleTheme()">‚òÄ Light Mode</div>
  </header>

  <!-- EDITOR -->
  <textarea id="editor"><%= typeof note !== "undefined" && note ? note.content : "Start typing..." %></textarea>

  <!-- CodeMirror JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/javascript/javascript.min.js"></script>

  <script>
    // Kh·ªüi t·∫°o CodeMirror
    let editor = CodeMirror.fromTextArea(document.getElementById("editor"), {
      lineNumbers: true,
      mode: "javascript",
      theme: "dracula"
    });

    // Auto-save m·ªói 1s
    let timeout;
    editor.on("change", () => {
      clearTimeout(timeout);
      timeout = setTimeout(() => {
        fetch("/save/<%= typeof noteId !== 'undefined' ? noteId : '' %>", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ content: editor.getValue() })
        });
      }, 1000);
    });

    // ƒê·ªïi theme to√†n trang + CodeMirror
    function toggleTheme() {
      let body = document.body;
      if (body.classList.contains("dark")) {
        body.classList.remove("dark");
        body.classList.add("light");
        editor.setOption("theme", "default");
        document.querySelector(".toggle-mode").innerText = "üåô Dark Mode";
      } else {
        body.classList.remove("light");
        body.classList.add("dark");
        editor.setOption("theme", "dracula");
        document.querySelector(".toggle-mode").innerText = "‚òÄ Light Mode";
      }
    }
  </script>
</body>
</html>
