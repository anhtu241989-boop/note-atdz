<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Note ATDZ</title>

  <!-- CodeMirror CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/theme/dracula.min.css">

  <style>
    body {
      margin: 0;
      background-color: #1e1e1e;
      color: #ddd;
      font-family: monospace;
    }
    header {
      padding: 10px;
      background: #111;
      border-bottom: 1px solid #333;
    }
    header h1 {
      margin: 0;
      font-size: 18px;
    }
    header small {
      font-size: 12px;
      color: #888;
    }
    #editor {
      height: calc(100vh - 60px);
    }
    .toggle-mode {
      float: right;
      cursor: pointer;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <header>
    <h1>
      Note Service
      <span class="toggle-mode" onclick="toggleTheme()">â˜€ Light Mode</span>
    </h1>
    <small>Changes are automatically saved after 1s</small>
  </header>

  <!-- Editor -->
  <textarea id="editor"><%= note ? note.content : "Start typing..." %></textarea>

  <!-- CodeMirror JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/javascript/javascript.min.js"></script>

  <script>
    // Khá»Ÿi táº¡o editor
    let editor = CodeMirror.fromTextArea(document.getElementById("editor"), {
      lineNumbers: true,
      mode: "javascript",
      theme: "dracula"
    });

    // Auto-save má»—i 1 giÃ¢y sau khi gÃµ
    let timeout;
    editor.on("change", () => {
      clearTimeout(timeout);
      timeout = setTimeout(() => {
        fetch("/save/<%= noteId %>", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ content: editor.getValue() })
        });
      }, 1000);
    });

    // Chuyá»ƒn theme
    function toggleTheme() {
      let newTheme = editor.getOption("theme") === "dracula" ? "default" : "dracula";
      editor.setOption("theme", newTheme);
      document.querySelector(".toggle-mode").innerText =
        newTheme === "dracula" ? "â˜€ Light Mode" : "ðŸŒ™ Dark Mode";
    }
  </script>
</body>
</html>
