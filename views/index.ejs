<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Note ATDZ</title>

  <!-- Google Fonts: JetBrains Mono -->
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@200;300;400&display=swap" rel="stylesheet">

  <!-- CodeMirror CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/theme/dracula.min.css">

  <style>
    :root {
      --bg-color: #1e1e1e;
      --text-color: #ddd;
      --header-bg: #111;
      --header-border: #333;
      --toggle-bg: #222;
      --toggle-border: #444;
    }

    body.light {
      --bg-color: #fafafa;
      --text-color: #222;
      --header-bg: #f0f0f0;
      --header-border: #ccc;
      --toggle-bg: #ddd;
      --toggle-border: #bbb;
    }

    body {
      margin: 0;
      background-color: var(--bg-color);
      color: var(--text-color);
      font-family: "JetBrains Mono", monospace;
      font-weight: 200;
      letter-spacing: 0.7px;
      line-height: 1.7;
    }

    header {
      padding: 10px;
      background: var(--header-bg);
      border-bottom: 1px solid var(--header-border);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header h1 {
      margin: 0;
      font-size: 18px;
      font-weight: 300;
      letter-spacing: 1px;
      line-height: 1.8;
      color: var(--text-color);
    }

    header small {
      font-size: 12px;
      font-weight: 200;
      letter-spacing: 0.8px;
      line-height: 1.6;
      color: var(--text-color);
    }

    .toggle-mode {
      cursor: pointer;
      font-size: 14px;
      background: var(--toggle-bg);
      padding: 4px 10px;
      border-radius: 6px;
      border: 1px solid var(--toggle-border);
      color: var(--text-color);
      transition: background 0.2s;
    }

    #editor {
      height: calc(100vh - 55px);
    }

    .CodeMirror {
      height: 100% !important;
      font-size: 14px;
      font-family: "JetBrains Mono", monospace;
      font-weight: 300;
      letter-spacing: 0.7px;
      line-height: 1.7;
      color: var(--text-color);
      background: var(--bg-color);
      transition: all 0.3s ease;
    }

    /* Hi·ªáu ·ª©ng: hover editor th√¨ ch·ªØ gi√£n th√™m */
    .CodeMirror:hover {
      letter-spacing: 1px;
      line-height: 1.8;
    }
  </style>
</head>
<body>
  <!-- HEADER -->
  <header>
    <div>
      <h1>Note Service</h1>
      <small>Changes are automatically saved after 1s</small>
    </div>
    <div class="toggle-mode" onclick="toggleTheme()">‚òÄ Light Mode</div>
  </header>

  <!-- EDITOR -->
  <textarea id="editor"><%= typeof note !== "undefined" && note ? note.content : "Start typing..." %></textarea>

  <!-- CodeMirror JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/javascript/javascript.min.js"></script>

  <script>
    // Kh·ªüi t·∫°o CodeMirror
    let editor = CodeMirror.fromTextArea(document.getElementById("editor"), {
      lineNumbers: true,
      mode: "javascript",
      theme: "dracula"
    });

    // Auto-save m·ªói 1s
    let timeout;
    editor.on("change", () => {
      clearTimeout(timeout);
      timeout = setTimeout(() => {
        fetch("/save/<%= typeof noteId !== 'undefined' ? noteId : '' %>", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ content: editor.getValue() })
        });
      }, 1000);
    });

    // ƒê·ªïi theme to√†n trang
    function toggleTheme() {
      document.body.classList.toggle("light");

      let isLight = document.body.classList.contains("light");
      editor.setOption("theme", isLight ? "default" : "dracula");
      document.querySelector(".toggle-mode").innerText =
        isLight ? "üåô Dark Mode" : "‚òÄ Light Mode";
    }
  </script>
</body>
</html>
